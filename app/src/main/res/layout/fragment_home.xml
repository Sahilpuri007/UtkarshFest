<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="@drawable/bg_two"
    android:backgroundTint="@color/title"
    android:backgroundTintMode="add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="320dp"
                android:src="@drawable/slide"
                android:id="@+id/img_u"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_u"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_utl"
                    />
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="CULTURAL"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_footloose" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_danceoff" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_rampage" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_saaz" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:text="CULTURAL"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/imgcul"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/utkarsh_events"
                            />
                    </LinearLayout>
                        
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_dramaturgy" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_rampage" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_dharohar" />
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/red_draw" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/logo_at" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:text="APERTURE"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/logo_dx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:text="DEXTERIA"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgatl"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/atlantus_events"
                        />
                    <ImageView
                        android:id="@+id/imgdex"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/technical_events"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/title"
                    android:src="@drawable/contacts_line"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/title"
                    android:src="@drawable/contacts"
                    />


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>